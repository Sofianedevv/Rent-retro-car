{% extends 'base.html.twig' %}
{% block title %}Nos Vans{% endblock %}
{% block body %}
<section id="shop" class="bg-[#F5F5F0] py-12">
    <div class="container mx-auto">
        <!-- Bouton retour -->
        <div class="mb-8">
            <a href="{{ path('app_collections') }}" 
               class="inline-flex items-center bg-[#8B4513] text-[#F5F5F0] py-3 px-6 hover:bg-[#734010] transition-colors duration-300 group">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                <span class="font-playfair">Retour aux véhicules</span>
            </a>
        </div>

        <div class="mb-10">
            <h1 class="text-4xl font-playfair font-bold text-[#8B4513] text-center">Nos Vans Vintage</h1>
            <p class="text-gray-600 text-center mt-4 max-w-2xl mx-auto">Partez à l'aventure avec nos vans d'époque, alliant style rétro et confort moderne pour des voyages inoubliables.</p>
        </div>

        <!-- Barre de recherche -->
        <div class="mb-8 max-w-3xl mx-auto">
            <form method="get" action="{{ path('app_van') }}" class="flex items-center space-x-4">
                <div class="flex-1 relative">
                    <input type="text" 
                           name="search" 
                           value="{{ search|default('') }}"
                           placeholder="Rechercher un van par marque ou modèle..." 
                           class="w-full px-6 py-3 border-2 border-[#8B4513] bg-white focus:outline-none focus:ring-2 focus:ring-[#8B4513]/50 placeholder-gray-400">
                    {% if search %}
                        <a href="{{ path('app_van') }}" 
                           class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700">
                            <i class="fas fa-times"></i>
                        </a>
                    {% endif %}
                </div>
                <button type="submit" 
                        class="bg-[#8B4513] text-[#F5F5F0] px-8 py-3 hover:bg-[#734010] transition-colors duration-300 flex items-center font-playfair">
                    <i class="fas fa-search mr-2"></i>
                    Rechercher
                </button>
            </form>
        </div>

        {% if search %}
            <div class="mb-6">
                <p class="text-gray-600">
                    {% if vans|length > 0 %}
                        {{ vans|length }} résultat(s) trouvé(s) pour "{{ search }}"
                    {% else %}
                        Aucun résultat trouvé pour "{{ search }}"
                    {% endif %}
                </p>
            </div>
        {% endif %}

        <!-- Top Filter -->
        <div class="flex flex-col md:flex-row justify-between items-center py-4">
           
            <div class="flex mt-5 md:mt-0 space-x-4">
                <div class="relative">
                 
                    <div
                            class="pointer-events-none absolute inset-y-0 right-0 flex items-center justify-center px-2">
                        <img id="arrow-down" class="h-4 w-4" src="{{ asset('template-html/assets/images/filter-down-arrow.svg') }}"
                             alt="filter arrow">
                        <img id="arrow-up" class="h-4 w-4 hidden" src="{{ asset('template-html/assets/images/filter-up-arrow.svg') }}"
                             alt="filter arrow">
                    </div>
                </div>
            </div>
        </div>
        <!-- Filter Toggle Button for Mobile -->
        <div class="block md:hidden text-center mb-4">
            <button id="products-toggle-filters"
                    class="bg-primary text-white py-2 px-4 rounded-full focus:outline-none">Show Filters</button>
        </div>
        <div class="flex flex-col md:flex-row">
            <!-- Filters -->
            <div id="filters" class="w-full md:w-1/4 p-6 hidden md:block bg-white shadow-lg">
                <form method="get" action="{{ path('app_van') }}" class="space-y-6">
                    <!-- Marque Filter -->
                    <div class="mb-8 pb-6 border-b border-[#8B4513]/10">
                        <h3 class="text-xl font-playfair font-bold text-[#8B4513] mb-4">Marque</h3>
                        <div class="space-y-2 max-h-48 overflow-y-auto">
                            {% for brand in brands %}
                                <div class="flex items-center">
                                    <input type="checkbox" 
                                           id="brand_{{ brand }}" 
                                           name="brand[]" 
                                           value="{{ brand }}"
                                           {% if brand in filters.brand|default([]) %}checked{% endif %}
                                           class="h-4 w-4 text-[#8B4513] border-gray-300 rounded focus:ring-[#8B4513]">
                                    <label for="brand_{{ brand }}" class="ml-2 text-sm text-gray-900 hover:text-[#8B4513] transition-colors cursor-pointer">
                                        {{ brand }}
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Prix Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Prix</h3>
                        <div class="flex flex-col space-y-2">
                            <input type="number" name="minPrice" placeholder="Prix min" 
                                   value="{{ filters.minPrice }}"
                                   class="border rounded p-2">
                            <input type="number" name="maxPrice" placeholder="Prix max" 
                                   value="{{ filters.maxPrice }}"
                                   class="border rounded p-2">
                        </div>
                    </div>

                    <!-- Volume de chargement Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Volume de chargement (m³)</h3>
                        <div class="flex flex-col space-y-2">
                            <input type="number" name="minCargoVolume" placeholder="Volume min" 
                                   value="{{ filters.minCargoVolume }}"
                                   class="border rounded p-2">
                            <input type="number" name="maxCargoVolume" placeholder="Volume max" 
                                   value="{{ filters.maxCargoVolume }}"
                                   class="border rounded p-2">
                        </div>
                    </div>

                    <!-- Nombre de places Filter -->
                    <div class="mb-8 pb-6 border-b border-[#8B4513]/10">
                        <h3 class="text-xl font-playfair font-bold text-[#8B4513] mb-4">Nombre de places</h3>
                        <div class="space-y-2 max-h-48 overflow-y-auto">
                            {% for seats in nbSeatsOptions %}
                                <div class="flex items-center">
                                    <input type="checkbox" 
                                           id="nbSeats_{{ seats }}" 
                                           name="nbSeats[]" 
                                           value="{{ seats }}"
                                           {% if seats in filters.nbSeats|default([]) %}checked{% endif %}
                                           class="h-4 w-4 text-[#8B4513] border-gray-300 rounded focus:ring-[#8B4513]">
                                    <label for="nbSeats_{{ seats }}" class="ml-2 text-sm text-gray-900 hover:text-[#8B4513] transition-colors cursor-pointer">
                                        {{ seats }} places
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Nombre de portes Filter -->
                    <div class="mb-8 pb-6 border-b border-[#8B4513]/10">
                        <h3 class="text-xl font-playfair font-bold text-[#8B4513] mb-4">Nombre de portes</h3>
                        <div class="space-y-2 max-h-48 overflow-y-auto">
                            {% for door in nbDoorsOptions %}
                                <div class="flex items-center">
                                    <input type="checkbox" 
                                           id="nbDoors_{{ door }}" 
                                           name="nbDoors[]" 
                                           value="{{ door }}"
                                           {% if door in filters.nbDoors|default([]) %}checked{% endif %}
                                           class="h-4 w-4 text-[#8B4513] border-gray-300 rounded focus:ring-[#8B4513]">
                                    <label for="nbDoors_{{ door }}" class="ml-2 text-sm text-gray-900 hover:text-[#8B4513] transition-colors cursor-pointer">
                                        {{ door }} portes
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Année Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Année</h3>
                        <div class="flex flex-col space-y-2">
                            <select name="minYear" class="border rounded p-2">
                                <option value="">Année min</option>
                                {% for year in years %}
                                    <option value="{{ year }}" {% if filters.minYear is not empty and filters.minYear == year %}selected{% endif %}>
                                        {{ year }}
                                    </option>
                                {% endfor %}
                            </select>
                            <select name="maxYear" class="border rounded p-2">
                                <option value="">Année max</option>
                                {% for year in years %}
                                    <option value="{{ year }}" {% if filters.maxYear is not empty and filters.maxYear == year %}selected{% endif %}>
                                        {{ year }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <!-- Kilométrage Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Kilométrage</h3>
                        <div class="flex flex-col space-y-2">
                            <input type="number" name="minMileage" placeholder="Kilométrage min" 
                                   value="{{ filters.minMileage }}"
                                   class="border rounded p-2">
                            <input type="number" name="maxMileage" placeholder="Kilométrage max" 
                                   value="{{ filters.maxMileage }}"
                                   class="border rounded p-2">
                        </div>
                    </div>

                    <!-- Disponibilité Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Disponibilité</h3>
                        <label class="flex items-center">
                            <input type="checkbox" name="availability" value="1"
                                   {% if filters.availability %}checked{% endif %}
                                   class="form-checkbox custom-checkbox">
                            <span class="ml-2">Disponible uniquement</span>
                        </label>
                    </div>

                    <div class="flex space-x-4">
                        <a href="{{ path('app_van') }}" 
                           class="w-1/2 bg-[#F5F5F0] text-[#8B4513] py-3 px-6 border-2 border-[#8B4513] hover:bg-[#8B4513] hover:text-[#F5F5F0] transition-colors duration-300 text-center font-playfair">
                            Réinitialiser
                        </a>
                        <button type="submit" 
                                class="w-1/2 bg-[#8B4513] text-[#F5F5F0] py-3 px-6 hover:bg-[#734010] transition-colors duration-300 font-playfair">
                            Appliquer
                        </button>
                    </div>
                </form>
            </div>
            <!-- Products List -->
            <div class="w-full md:w-3/4 p-6">
                <!-- Products grid -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- All Car -->
                {% for van in vans %}
                    {% include 'parts/card/favorite/_van_card.html.twig' %}
                {% endfor %}
                </div>
                <!-- Pagination -->
                <div class="flex justify-center mt-12">
                    <nav aria-label="Page navigation">
                        <ul class="inline-flex space-x-4">
                            <li>
                                <a href="#"
                                   class="bg-[#8B4513] text-[#F5F5F0] w-12 h-12 flex items-center justify-center border-2 border-[#8B4513] font-playfair hover:bg-[#734010] transition-colors duration-300">
                                    1
                                </a>
                            </li>
                            <li>
                                <a href="#"
                                   class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-primary hover:text-white">2</a>
                            </li>
                            <li>
                                <a href="#"
                                   class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-primary hover:text-white">3</a>
                            </li>
                            <li>
                                <a href="#" class="w-10 h-10 flex items-center justify-center rounded-full">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
