{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex h-screen bg-gray-100">
        {# Sidebar #}
        <aside class="w-64 bg-gray-800">
            <div class="p-4 border-b border-gray-700">
                <h1 class="text-white text-2xl font-semibold">Administration</h1>
            </div>
            
            <nav class="mt-4">
                <ul>
                    <li>
                        <a href="{{ path('admin_dashboard') }}" 
                           class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors
                           {{ app.request.get('_route') == 'admin_dashboard' ? 'bg-gray-700 text-white' : '' }}">
                            <i class="fas fa-tachometer-alt w-6"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_vehicles') }}" 
                           class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors
                           {{ app.request.get('_route') starts with 'admin_vehicle' ? 'bg-gray-700 text-white' : '' }}">
                            <i class="fas fa-car w-6"></i>
                            <span>Véhicules</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_users') }}" 
                           class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors
                           {{ app.request.get('_route') == 'admin_users' ? 'bg-gray-700 text-white' : '' }}">
                            <i class="fas fa-users w-6"></i>
                            <span>Utilisateurs</span>
                        </a>
                    </li>
                       <li>
                        <a href="{{ path('admin_categories') }}" 
                           class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors
                           {{ app.request.get('_route') == 'admin_users' ? 'bg-gray-700 text-white' : '' }}">
                            <i class="fa-solid fa-list w-6"></i>
                            <span> Categories</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app') }}" target="_blank"
                           class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
                            <i class="fas fa-external-link-alt w-6"></i>
                            <span>Voir le site</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        {# Main Content #}
        <main class="flex-1 overflow-x-hidden overflow-y-auto">
            {# Top Bar #}
            <div class="bg-white shadow px-6 py-4">
                <div class="flex justify-between items-center">
                    <h2 class="text-xl font-semibold text-gray-800">
                        {% block page_title %}Administration{% endblock %}
                    </h2>
                    <div class="flex items-center">
                        <span class="text-gray-600 mr-4">{{ app.user.email }}</span>
                        <a href="{{ path('app_logout') }}" class="text-red-600 hover:text-red-800">
                            <i class="fas fa-sign-out-alt"></i> Déconnexion
                        </a>
                    </div>
                </div>
            </div>

            {# Flash Messages #}
            <div class="p-6">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="mb-4 p-4 rounded-lg {{ label == 'success' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {# Main Content Block #}
                {% block admin_content %}{% endblock %}
            </div>
        </main>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{% endblock %} 