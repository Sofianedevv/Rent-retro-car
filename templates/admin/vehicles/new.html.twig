{% extends 'admin/base.html.twig' %}

{% block admin_content %}
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                <div class="flex justify-between items-center">
                    <h1 class="text-xl font-semibold text-gray-800">
                        {% if vehicle_type == 'car' %}
                            <i class="fas fa-car mr-2"></i> Nouvelle voiture
                        {% elseif vehicle_type == 'van' %}
                            <i class="fas fa-truck mr-2"></i> Nouveau van
                        {% else %}
                            <i class="fas fa-motorcycle mr-2"></i> Nouvelle moto
                        {% endif %}
                    </h1>
                    <a href="{{ path('admin_vehicles') }}" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700">
                        <i class="fas fa-arrow-left mr-2"></i> Retour
                    </a>
                </div>
            </div>

            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {# Left column - Basic Info #}
                        <div class="space-y-4">
                            <h2 class="text-lg font-medium text-gray-900">Informations générales</h2>
                            
                            <div>
                                {{ form_label(form.brand, 'Marque', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.brand, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                                {{ form_errors(form.brand, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                            </div>

                            {# Add other basic fields similarly #}
                        </div>

                        {# Right column - Technical Info #}
                        <div class="space-y-4">
                            <h2 class="text-lg font-medium text-gray-900">Caractéristiques techniques</h2>
                            
                            {# Vehicle type specific fields #}
                            {% if vehicle_type == 'car' %}
                                {# Car specific fields #}
                            {% endif %}
                            
                            {% if vehicle_type == 'van' %}
                                {# Van specific fields #}
                            {% endif %}
                            
                            {% if vehicle_type == 'motorcycle' %}
                                {# Motorcycle specific fields #}
                            {% endif %}
                        </div>
                    </div>

                    {# Categories and Image section #}
                    <div class="mt-6 space-y-4">
                        <h2 class="text-lg font-medium text-gray-900">Image et catégories</h2>
                        
                        <div>
                            {{ form_label(form.defaultImage, 'Image par défaut', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.defaultImage, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                        </div>

                        <div>
                            {{ form_label(form.categories, 'Catégories', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            <div class="mt-2 grid grid-cols-2 gap-4">
                                {{ form_widget(form.categories) }}
                            </div>
                        </div>
                    </div>

                    <div class="mt-6 flex justify-end">
                        <button type="submit" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                            <i class="fas fa-save mr-2"></i> Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 