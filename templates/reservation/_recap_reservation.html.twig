{% extends 'base.html.twig' %}

{% block title %}
	Récapitulatif de la réservation
{% endblock %}

{% block body %}
	<div class="container mx-auto p-4">
		<h1 class="text-3xl font-bold mb-6">Récapitulatif de votre réservation</h1>

		<div class="bg-white p-6 rounded-lg shadow-md">
			<h2 class="text-2xl font-semibold mb-4">Détails du véhicule</h2>
			<p>
				<strong>Marque:</strong>
				{{ vehicle.brand }}</p>
			<p>
				<strong>Modèle:</strong>
				{{ vehicle.model }}</p>
			<p>
				<strong>Année:</strong>
				{{ vehicle.year }}</p>
			<p>
				<strong>Prix par jour:</strong>
				{{ vehicle.price }}
				EUR</p>

			<p>
				<strong>Vehicle ID:</strong>
				<span id="vehicle-id">{{ vehicle.id }}</span>
			</p>

			<h2 class="text-2xl font-semibold mt-6 mb-4">Dates de réservation</h2>
			<p>
				<strong>Date de début:</strong>
				<span id="start-date">{{ startDate }}</span>
			</p>
			<p>
				<strong>Date de fin:</strong>
				<span id="end-date">{{ endDate }}</span>
			</p>

			<h2 class="text-2xl font-semibold mt-6 mb-4">Prix total</h2>
			<p>
				<strong>Total:</strong>
				<span id="total-price">{{ totalPrice }}</span>
				EUR</p>
			<h3>Donnée de la reservation</h3>
			<div class="mt-8 flex justify-center">
				<a href="{{ path('app_reservation') }}" class="btn btn-primary">
					Confirmer la réservation
				</a>
			</div>
		</div>
	</div>

    {% block javascripts %}
		<script src="{{ asset('js/details_reservation.js') }}"></script>
    {% endblock %}
{% endblock %}
