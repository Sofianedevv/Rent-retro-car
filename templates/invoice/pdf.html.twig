{% extends 'base_pdf.html.twig' %}

{% block title %}Facture N°{{ invoice.invoiceNumber }}{% endblock %}

{% block content %}
    <div class="flex justify-between bg-white p-8 rounded-lg shadow-lg">
        <div class="w-1/2">
            <h2 class="text-3xl font-bold text-gray-800">Facture N°{{ invoice.invoiceNumber }}</h2>
            <p class="text-gray-600 text-sm mt-2">Date d'émission: {{ invoice.createdAt|date('d/m/Y') }}</p>
            <p class="text-gray-800 font-semibold mt-6">RRR</p>
            <p class="text-gray-600">123 Rue de Rétro</p>
            <p class="text-gray-600">75001 Paris, France</p>
            <p class="text-gray-600">Tél: +33 1 23 45 67 89</p>
            <p class="text-gray-600">SIRET: 123 456 789 00010</p>
        </div>

        <div class="w-1/2 text-right">
            <p class="text-gray-800 font-semibold">Client:</p>
            <p class="text-gray-600">{{ reservation.client.firstName }} {{ reservation.client.lastName }}</p>
            <p class="text-gray-600">{{ reservation.client.email }}</p>
            <p class="text-gray-600">{{ reservation.client.phoneNumber }}</p>
        </div>
    </div>

    <div class="bg-white p-8 mt-6 rounded-lg shadow-lg">
        <h3 class="text-2xl font-semibold text-gray-800 mb-6">Détails de la réservation</h3>

        <table class="min-w-full table-auto text-left border-collapse">
            <thead>
                <tr class="bg-gray-100 border-b">
                    <th class="px-6 py-3 text-gray-600 font-medium">Description</th>
                    <th class="px-6 py-3 text-gray-600 font-medium">Quantité</th>
                    <th class="px-6 py-3 text-gray-600 font-medium">Prix Unitaire</th>
                    <th class="px-6 py-3 text-gray-600 font-medium">Montant</th>
                </tr>
            </thead>
            <tbody>
                <tr class="border-b">
                    <td class="px-6 py-4 text-gray-600">{{ reservation.vehicle.model }} - Location</td>
                    <td class="px-6 py-4 text-gray-600">1</td>
                    <td class="px-6 py-4 text-gray-600">{{ reservation.vehicle.price }} €</td>
                    <td class="px-6 py-4 text-gray-600">{{ reservation.totalPrice }} €</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-6 flex justify-end space-x-8">
            <div class="w-1/3">
                <div class="flex justify-between">
                    <p class="text-gray-600 font-semibold">Total HT</p>
                    <p class="text-gray-800">{{ reservation.totalPrice }} €</p>
                </div>
                <div class="flex justify-between mt-4">
                    <p class="text-gray-600 font-semibold">TVA (20%)</p>
                    <p class="text-gray-800">{{ (reservation.totalPrice * 0.20)|number_format(2) }} €</p>
                </div>
                <div class="flex justify-between mt-4">
                    <p class="text-gray-600 font-semibold">Total TTC</p>
                    <p class="text-gray-800">{{ (reservation.totalPrice * 1.20)|number_format(2) }} €</p>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white p-8 mt-6 rounded-lg shadow-lg">
        <h4 class="text-xl font-semibold text-gray-800 mb-4">Conditions Générales de Vente</h4>
        <p class="text-gray-600">
            La présente facture est régie par les conditions générales de vente de l'entreprise RRR. Le paiement est dû à la réception de la facture. Tout retard de paiement entraînera des pénalités de retard selon la législation en vigueur.
        </p>
    </div>
{% endblock %}
