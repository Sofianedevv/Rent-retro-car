{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-amber-100 to-amber-200 py-12">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-2xl border-2 border-amber-800">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-amber-900">Inscription</h1>
            <div class="mt-2 h-1 w-16 bg-amber-800 mx-auto"></div>
        </div>

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="mb-4 p-4 bg-red-100 border-l-4 border-red-500 text-red-700">
                {{ flash_error }}
            </div>
        {% endfor %}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class': 'block text-sm font-medium text-amber-900'}}) }}
                {{ form_widget(registrationForm.firstName, {'attr': {
                    'class': 'mt-1 block w-full px-3 py-2 bg-amber-50 border border-amber-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500'
                }}) }}
            </div>

            <div>
                {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-amber-900'}}) }}
                {{ form_widget(registrationForm.lastName, {'attr': {
                    'class': 'mt-1 block w-full px-3 py-2 bg-amber-50 border border-amber-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500'
                }}) }}
            </div>

            <div>
                {{ form_label(registrationForm.phoneNumber, 'Téléphone', {'label_attr': {'class': 'block text-sm font-medium text-amber-900'}}) }}
                {{ form_widget(registrationForm.phoneNumber, {'attr': {
                    'class': 'mt-1 block w-full px-3 py-2 bg-amber-50 border border-amber-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500'
                }}) }}
            </div>

            <div>
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-amber-900'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {
                    'class': 'mt-1 block w-full px-3 py-2 bg-amber-50 border border-amber-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500'
                }}) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-amber-900'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {
                    'class': 'mt-1 block w-full px-3 py-2 bg-amber-50 border border-amber-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500'
                }}) }}
            </div>

            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {
                    'class': 'h-4 w-4 text-amber-600 focus:ring-amber-500 border-amber-300 rounded'
                }}) }}
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', {'label_attr': {
                    'class': 'ml-2 block text-sm text-amber-900'
                }}) }}
            </div>

            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-amber-800 hover:bg-amber-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition duration-300">
                S'inscrire
            </button>
        {{ form_end(registrationForm) }}

        <div class="mt-6 text-center">
            <p class="text-sm text-amber-900">
                Déjà inscrit ? 
                <a href="{{ path('app_login') }}" class="font-medium text-amber-800 hover:text-amber-900 underline">
                    Se connecter
                </a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
