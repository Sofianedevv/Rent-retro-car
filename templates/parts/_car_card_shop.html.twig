<div class="bg-pastel-blue p-6 rounded-lg shadow border border-gray-400" style="font-family: 'Roboto Slab', serif; color: #4C4A41; background: linear-gradient(to bottom, #EAE3D2, #D8C3A5);">
    <div class="relative">
        <img src="{{ car.defaultImage }}" alt="{{ car.model }}" class="w-full h-48 object-cover mb-4 rounded-lg border border-gray-400">

        <p class="text-xl font-semibold mb-2 block text-gray-700">
            {{ car.model }}
        </p>
        <p class="text-base text-gray-600 italic mb-2">{{ car.brand }}</p>

        <div class="flex items-center mb-4">
            <span class="text-xl font-bold text-pink-700">{{ car.price }}</span>
        </div>

        <button class="bg-pink-700 border border-gray-400 hover:bg-pastel-blue hover:border-pink-700 text-white hover:text-pink-700 font-semibold py-2 px-4 rounded-full w-full transition">
            Add to Cart
        </button>
    </div>
</div>
