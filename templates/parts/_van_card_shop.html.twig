<div class="group relative bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-500">
    <div class="relative overflow-hidden h-64">
        <img src={{van.defaultImage}} 
             alt={{van.model}}
             class="w-full h-full object-cover transform group-hover:scale-110 transition-all duration-700">
        <!-- Gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <!-- Year badge -->
        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full shadow-lg">
            <span class="font-playfair text-[#8B4513] font-bold">{{van.year}}</span>
        </div>
        
        <!-- Rating badge -->
        {% if van.averageRating is defined %}
        <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full shadow-lg flex items-center">
            <i class="fas fa-star text-yellow-500 mr-1"></i>
            <span class="font-bold">{{ van.averageRating|number_format(1) }}</span>
        </div>
        {% endif %}
    </div>

    <div class="p-6">
        <div class="mb-4">
            <h3 class="font-playfair text-xl font-bold text-[#8B4513]">{{van.brand}}</h3>
            <p class="text-gray-600">{{van.model}}</p>
        </div>

        <div class="flex items-center justify-between py-3 mb-4 bg-gray-50 rounded-lg px-4">
            <div class="text-sm">
                <div class="flex items-center">
                    <i class="fas fa-users text-[#8B4513] mr-2"></i>
                    <span class="font-medium">{{van.nbSeats}} places</span>
                </div>
                <div class="flex items-center mt-1">
                    <i class="fas fa-box text-[#8B4513] mr-2"></i>
                    <span class="font-medium">{{van.cargoVolume}} m³</span>
                </div>
            </div>
            <div class="text-right">
                <span class="font-bold text-2xl text-[#8B4513]">{{van.price}}€</span>
                <span class="text-gray-600 text-sm">/jour</span>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-3">
            <a href="{{ path('app_vehicle_show_details', {'vehicleId': van.id}) }}"
               class="bg-white text-[#8B4513] hover:bg-gray-50 border border-[#8B4513] rounded-lg font-medium px-4 py-2 transition-colors duration-300 flex items-center justify-center gap-2">
               <i class="fas fa-info-circle"></i>
               Détails
            </a>
            <a href="#" 
               class="bg-[#8B4513] text-white hover:bg-[#734010] rounded-lg font-medium px-4 py-2 transition-colors duration-300 flex items-center justify-center gap-2">
               <i class="fas fa-calendar-alt"></i>
               Réserver
            </a>
        </div>
    </div>
</div>