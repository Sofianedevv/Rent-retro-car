<div class="bg-white shadow-xl rounded-lg overflow-hidden transform transition-all duration-300 hover:scale-105 relative">
	<div class="relative">

		{% if app.user %}
			<div class="absolute top-2 right-2 flex items-center space-x-2 bg-white bg-opacity-70 px-2 py-1 rounded-full">
				{% if isFavorite is defined and van.id is defined and isFavorite[van.id] is defined %}
					{% if isFavorite[van.id] %}
						<a href="{{ path('app_favorite_delete', {'vehicleId': van.id}) }}">
							<i class="fa-solid fa-heart" style="color: #ff3d3d;"></i>
							<span class="text-xs text-gray-800">Enregistrer</span>
						</a>
					{% else %}
						<a href="{{ path('app_favorite_add', {'vehicleId': van.id}) }}">
							<i class="far fa-heart text-gray-700"></i>
							<span class="text-xs text-gray-800">Enregistrer</span>
						</a>
					{% endif %}
				{% else %}
					<a href="{{ path('app_favorite_add', {'vehicleId': van.id}) }}">
						<i class="far fa-heart text-gray-700"></i>
						<span class="text-xs text-gray-800">Enregistrer</span>
					</a>
				{% endif %}
			</div>
		{% endif %}

		<img src="{{ van.defaultImage }}" alt="{{ van.model }}" class="w-full h-48 object-cover transition-all duration-300 group-hover:opacity-80">
	</div>

	<div class="p-6 bg-gradient-to-b from-white via-gray-50 to-gray-100">
		<div class="mb-4">
			<a href="{{ path('app_vehicle_show_details', {vehicleId: van.id}) }}" class="block">
				<h3 class="text-lg font-bold text-gray-800 mb-1">{{ van.model }}</h3>
			</a>
			<p class="text-sm text-gray-500 mb-3 italic">{{ van.brand }}</p>
		</div>

		<div class="flex items-center justify-between my-4">

			<div class="flex items-center text-gray-600 text-sm">
				<i class="fas fa-cogs mr-2"></i>
				{{van.cargoVolume}}
				mÂ³
			</div>
			<div class="text-red-600 font-bold text-xl">{{van.price}}</div>
		</div>


	</div>
</div>
