<div class="bg-white shadow-xl rounded-lg overflow-hidden transform transition-all duration-300 hover:scale-105 relative">


	<div class="relative">
		{% if app.user %}
			<div class="absolute top-2 right-2 flex items-center space-x-2 bg-white bg-opacity-70 px-2 py-1 rounded-full">
				{% if isFavorite[motorcylce.id] %}
					<i class="fa-solid fa-heart text-red-500"></i>
				{% else %}
					<i class="far fa-heart text-gray-700"></i>
				{% endif %}
				<span class="text-xs text-gray-800">Enregistrer</span>
			</div>
		{% endif %}


		<img src="{{ motorcylce.defaultImage }}" alt="{{ motorcylce.model }}" class="w-full h-48 object-cover transition-all duration-300 group-hover:opacity-80">
	</div>

	<div class="p-6 bg-gradient-to-b from-white via-gray-50 to-gray-100">
		<div class="mb-4">
			<h3 class="text-lg font-bold text-gray-800 mb-1">{{ motorcylce.model }}</h3>
			<p class="text-sm text-gray-500 mb-3 italic">{{ motorcylce.brand }}</p>
		</div>

		<div class="flex items-center justify-between my-4">

			<div class="flex items-center text-gray-600 text-sm">
				<i class="fas fa-cogs mr-2"></i>
				{{motorcylce.engineCapacity}} CC
			</div>
			<div class="text-red-600 font-bold text-xl">{{motorcylce.price}}</div>
		</div>

		<button class="bg-primary hover:bg-red-600 text-white py-3 px-6 rounded-full w-full transition-all duration-300">
			RÃ©server maintenant
		</button>
	</div>
</div>
