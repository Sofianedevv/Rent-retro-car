{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-6">
    <h1 class="text-3xl font-semibold text-indigo-800 mb-6">Mon Profil</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 p-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-700{% else %}bg-red-100 text-red-700{% endif %}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="bg-white p-6 rounded-lg shadow-md">
        {{ form_start(form) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                </div>
                <div class="space-y-4">
                    {{ form_row(form.email) }}
                    {{ form_row(form.phoneNumber) }}
                </div>
            </div>

            <div class="mt-6 flex justify-end">
                <button type="submit" class="bg-primary text-white px-6 py-2 rounded-lg hover:bg-primary-dark transition duration-300">
                    Enregistrer les modifications
                </button>
            </div>
        {{ form_end(form) }}
    </div>

    <div class="mt-8 bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Activité récente</h2>
        <div class="space-y-4">
            <div>
                <h3 class="font-medium text-gray-700">Dernières réservations</h3>
                {# TODO: Ajouter la liste des réservations #}
            </div>
            <div>
                <h3 class="font-medium text-gray-700">Véhicules favoris</h3>
                {# TODO: Ajouter la liste des favoris #}
            </div>
        </div>
    </div>
</div>
{% endblock %} 